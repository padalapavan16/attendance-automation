    <div class="loading">Loading&#8230;</div>
.container
  .alert.alert-dismissible.fade.show.text-center.alert-success(role='alert')
    strong Look At Camera.
    | It may take a second to recognize... 
    button.close(type='button' data-dismiss='alert' aria-label='Close')
      span(aria-hidden='true') &times;
  .col-12.center
    h1.mb-4.mt-4 Instructor Login Page
    #camera.bg-dark
// Modal
#staticBackdrop.modal.fade(data-backdrop='static' tabindex='-1' role='dialog' aria-labelledby='staticBackdropLabel' aria-hidden='true')
  .modal-dialog(role='document')
    .modal-content
      .modal-header.bg-dark
        h5#staticBackdropLabel.modal-title.text-light Login Options
        button.close.text-light(type='button' data-dismiss='modal' aria-label='Close')
          span(aria-hidden='true') &times;
      .modal-body
        .row
          a#anchor.col-lg-12.mb-4.d-flex.align-items-center.justify-content-center(href='#')
            button#login.btn.btn-info Login
          .col-lg-12.mt-4.d-flex.align-items-center.justify-content-center
            button#try.btn.btn-secondary(type='button' data-dismiss='modal') Try Again
      .modal-footer
        button.btn.btn-secondary(type='button' data-dismiss='modal') Close
script(src='./jquery.min.js')
script(src='./bootstrap.min.js')
